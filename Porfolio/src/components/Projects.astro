---

{
  PROJECTS.map(({ title, description, link, Github, image, tags, video }) => (
    <article class="gap-6 flex mt-6 mb-10 flex-col lg:flex-row justify-center items-center  w-full  lg:w-[1000px] mx-auto">
      <div class="flex flex-col">
        <h3 class="text-2xl lg:text-4xl text-white">
          <span class="text-yellow-200/90">Titulo: </span>
          {title}
        </h3>
        <p class="text-pretty text-base lg:text-xl text-white mt-3">
          {" "}
          <span class="text-yellow-200/90">Descripcion: </span> {description}
        </p>

        <span class="justify-center xl:mx-auto">
          <h3 class="mr-2 mt-4 text-yellow-200/90">Tecnologias Usadas: </h3>
          <ul class="flex gap-x-2 flex-wrap  xl:mx-auto">
            {tags.map((tag) => (
              <li class="flex text-white">{tag}</li>
            ))}
          </ul>
        </span>

        <span class="flex flex-col my-4">
          <h3 class="text-yellow-200/90">Links del Proyecto: </h3>
          {link && (
            <a href={link} class="ml-2 text-white" target="_blank">
              Deploy del Proyecto
            </a>
          )}
          {video && (
            <a href={video} class="ml-2 text-white" target="_blank">
              Video Del Proyecto
            </a>
          )}
          {Github && (
            <a href={Github} class="ml-2 text-white" target="_blank">
              {" "}
              Repositorio del Proyecto{""}
            </a>
          )}
        </span>
      </div>
      <img
        src={image}
        class="w-auto h-auto md:h-80 "
        alt={`Captura de Pantalla del Proyecto ${image}`}
      />
    </article>
  ))
}
