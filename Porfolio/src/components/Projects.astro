---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import JavaScript from "./icons/JavaScript.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import React from "./icons/React.astro";
import MongoDB from "./icons/MongoDB.astro";
import Nodejs from "./icons/Nodejs.astro";
import ASTRO from "./icons/ASTRO.astro";
import Postgresql from "./icons/Postgresql.astro";

const TAGS = {
  MongoDB: {
    name: "MongoDB",
    class: "bg-[#10aa50] text-white",
    icon: MongoDB,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  JavaScript: {
    name: "JavaScript",
    class: "bg-[#f7e018] text-black",
    icon: JavaScript,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#e44d26] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#379ad6] text-white",
    icon: CSS,
  },
  React: {
    name: "React",
    class: "bg-[#4ad5ff99] text-white",
    icon: React,
  },

  Nodejs: {
    name: "Nodejs",
    class: "bg-[#46473d] text-[#87cf30]",
    icon: Nodejs,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#ff6209] text-white",
    icon: ASTRO,
  },
  PostgreSQL: {
    name: "PostgreSQL",
    class: "bg-[#33679155] text-white",
    icon: Postgresql,
  },
};

const PROJECTS = [
  {
    title:
      "Proyecto de practica para funcionalidad de comentarios y publicaciones",
    description:
      "Es un poryecto que realize para aprender a manejar correctamente redux toolkit , dandole una funcionalidad similar a twitter de comentarios y publicaciones , tambien le agregue un sistema de usuarios administradores y usuarios comunes , con un filtro por tematicas de cada publicación",
    link: "https://darwoft-blog.onrender.com",
    image: "../../blogd.webp",
    tags: [
      "[React]",
      "[JavaScript]",
      "[TailwindCSS]",
      "[NodeJS]",
      "[Redux Toolkit]",
      "[MongoDB]",
    ],
  },
  {
    title: "Codeluxe",
    description:
      "Emprendimiento realizado junto a un grupo de amigos para trabajar de forma Freelance vendiendo servicios de Desarrollo Web FullStack, Edición de Video, Producción Musical, Diseño Gráfico y de Logos y Marketing Digital.",
    link: "https://codeluxe.tech",
    image: "../../codeluxe.webp",
    tags: ["[Astro]", "[JavaScript]", "[TailwindCSS]"],
  },
  {
    title: "Proyecto Autenticos",
    description:
      "Proyecto realizado con un colega, para facilitar la venta y organización de mentorias. Donde los usuarios van a poder comprar la cantidad de mentorias que necesiten.",
    link: "https://autenticos.onrender.com",
    image: "../../autenticos.webp",
    tags: [
      "[HTML]",
      "[React]",
      "[JavaScript]",
      "[TailwindCSS]",
      "[NodeJS]",
      "[Mongoose]",
      "[MongoDB]",
      "[Mercado Pago API]",
    ],
  },
];
---

{
  PROJECTS.map(({ title, description, link, image, tags }) => (
    <article class="flex flex-col lg:flex-row justify-center md:px-20 gap-6 mt-6 mb-10 w-full lg:w-[1000px] mx-auto">
      <div>
        <h3 class="text-2xl lg:text-2xl text-white mb-4">
          <span class="text-yellow-200/90">{title}</span>
        </h3>
        <img
          src={image}
          alt="imagen proyecto"
          class="max-w-[500px]  w-full md:w-auto h-72 md:h-auto rounded-xl"
        />
      </div>
      <div class="flex flex-col">
        <p class="text-sm lg:text-base text-white lg:mt-12 text-pretty">
          {description}
        </p>
        <span class="">
          <h3 class="mr-2 text-yellow-200/90">Tecnologias Usadas: </h3>
          <ul class="flex gap-x-2 flex-wrap xl:mx-auto">
            {tags.map((tag) => (
              <li class="flex text-white text-base">{tag}</li>
            ))}
          </ul>
        </span>
        <span class="flex flex-col my-4">
          <h3 class="text-yellow-200/90">Links del Proyecto: </h3>
          {link && (
            <a
              href={link}
              class="ml-2 text-white"
              target="_blank"
              rel="noopener noreferrer"
            >
              Deploy del Proyecto
            </a>
          )}
        </span>
      </div>
    </article>
  ))
}
