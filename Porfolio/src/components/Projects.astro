---
import Tailwind from "./icons/Tailwind.astro";
import JavaScript from "./icons/JavaScript.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import React from "./icons/React.astro";
import MongoDB from "./icons/MongoDB.astro";
import Nodejs from "./icons/Nodejs.astro";
import ASTRO from "./icons/ASTRO.astro";
import Postgresql from "./icons/Postgresql.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

const TAGS = {
  MongoDB: {
    name: "MongoDB",
    class: "bg-[#10aa50] text-white",
    icon: MongoDB,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  JavaScript: {
    name: "JavaScript",
    class: "bg-[#f7e018] text-black",
    icon: JavaScript,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#e44d26] text-white",
    icon: HTML,
  },
  CSS: {
    name: "CSS",
    class: "bg-[#379ad6] text-white",
    icon: CSS,
  },
  React: {
    name: "React",
    class: "bg-[#4ad5ff99] text-white",
    icon: React,
  },

  Nodejs: {
    name: "Nodejs",
    class: "bg-[#46473d] text-[#87cf30]",
    icon: Nodejs,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#ff6209] text-white",
    icon: ASTRO,
  },
  PostgreSQL: {
    name: "PostgreSQL",
    class: "bg-[#33679155] text-white",
    icon: Postgresql,
  },
};

const PROJECTS = [
  {
    title: "Autenticos",
    description:
      "Proyecto realizado de manera freelance, para facilitar la venta y organización de mentorias. Cuenta con autenticacion de usuarios, esta integrada tambien la pasarela de pago de Mercado Pago facilitando la compra ya que le permite al usuario tener una pre-visualización del precio de la mentoria a comprar, tambien esta implementado una funcionalidad para mantener el precio del dolar actualizado al momento en argentina",
    link: "https://autenticos.onrender.com",
    image: "../../autenticos.webp",
    tags: [
      TAGS.HTML,
      TAGS.React,
      TAGS.JavaScript,
      TAGS.TAILWIND,
      TAGS.Nodejs,
      TAGS.MongoDB,
    ],
  },

  {
    title: "La Mestiza",
    description:
      "Página web para La Mestiza (restaurante), que ofrece una experiencia única a sus clientes. Mediante un código QR, los usuarios pueden acceder a una plataforma que proporciona información sobre el lugar, incluyendo datos de contacto, ubicación, la carta presentada de manera estética y original. Cuenta con una óptima optimización y SEO para mejorar su visibilidad.",
    link: "https://lamestiza.netlify.app",
    image: "../../mestiza.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.JavaScript],
  },
  {
    title: "Codeluxe",
    description:
      "Emprendimiento realizado junto a un grupo de amigos para trabajar de forma Freelance vendiendo servicios de Desarrollo Web FullStack, Edición de Video, Producción Musical, Diseño Gráfico, de Logos y Marketing Digital.",
    link: "https://codeluxe.tech",
    image: "../../codeluxe.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWIND, TAGS.JavaScript],
  },
  {
    title: "Club Deportivo Sarmiento",
    description:
      "Deportivo Sarmiento es un club deportivo para el cual se desarrolló una aplicación web que facilita la administración del flujo de socios, tipos de socios, cobradores, recibos, gastos, y proporciona estadísticas sobre métodos de pago, entre otras funcionalidades. Se trata de una aplicación muy completa y con altos estándares de seguridad.",
    link: "",
    image: "../../deportivo.webp",
    tags: [TAGS.React, TAGS.Nodejs, TAGS.MongoDB, TAGS.TAILWIND],
  },
  {
    title: "Proyecto de practica",
    description:
      "Es un proyecto que realize para aprender a manejar correctamente redux toolkit , dandole una funcionalidad similar a twitter de comentarios y publicaciones, tambien le agregue un sistema de usuarios administradores y usuarios comunes, con un filtro por tematicas de cada publicación",
    link: "https://darwoft-blog.onrender.com",
    image: "../../blogd.webp",
    tags: [
      TAGS.React,
      TAGS.JavaScript,
      TAGS.TAILWIND,
      TAGS.Nodejs,
      TAGS.MongoDB,
    ],
  },
];
---

{
  PROJECTS.map(({ title, description, link, image, tags }) => (
    <article class="flex flex-col sm:flex-row gap-6 my-6 w-full">
      <div class="flex flex-col  w-full">
        <img
          src={image}
          alt={title}
          class="sm:w-auto object-cover lg:w-full cursor-pointer rounded-md shadow-md transition-all hover:shadow-xl hover:shadow-white/30"
        />
      </div>
      <div class="flex flex-col justify-center gap-2 sm:max-w-[500px] w-full">
        <h3 class="text-2xl lg:text-2xl text-white">
          <span class="text-yellow-200/90">{title}</span>
        </h3>
        <p class="text-sm lg:text-base text-white text-pretty">{description}</p>
        <span class="">
          <h3 class="mr-2 mt-4 text-yellow-200/90">Tecnologias Usadas: </h3>
          <ul class="flex  flex-wrap flex-row mb-2 gap-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
        </span>
        <span class="flex flex-col my-4">
          <LinkButton href={link ?? "/"}>
            <Link class="size-4" />
            {link ? "Link del Proyecto" : "Link privado"}
          </LinkButton>
        </span>
      </div>
    </article>
  ))
}
