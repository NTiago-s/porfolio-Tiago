---
//Components
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Projects from "../components/Projects.astro";
import Certificados from "../components/Certificados.astro";
// Iconos
import GithubIcon from "../components/icons/Github.astro";
import SocialPill from "../components/SocialPill.astro";
import EmailICon from "../components/icons/Mail.astro";
import PortfolioIcon from "../components/icons/PortFolio.astro";
import CodeIcon from "../components/icons/Code.astro";
import About from "../components/About.astro";
import DescargarCV from "../components/icons/DescargarCV.astro";
---

<Layout title="Tiago Navarro - Portfolio">
  <main class="px-4 w-full text-balance">
    <SectionContainer
      class="py-16 mx-auto pb-14 mt-16 lg:py-44 text-center justify-center items-center lg:pb-24"
    >
      <h1
        class="flex text-center mt-6 w-full lg:w-[1000px] mx-auto text-white justify-center text-2xl lg:text-5xl font-bold lg:flex-row gap-x-4 pb-4 lg:pb-10"
      >
        Hola, soy Tiago

        <a
          href="https://www.linkedin.com/in/tiago-navarro-30bba2291/"
          target="_blank"
          rel="noopener"
          class="flex justify-center items-center"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[1120px]">
        <span class="text-yellow-200/90">üë®‚ÄçüíªDesarrollador Web Full Stack.</span>
        <br />
        <span class="text-red-100/90">De Misiones, Argentina.</span>
      </h2>

      <nav
        class="mt-8 flex gap-4 flex-wrap text-white w-full justify-center mx-auto lg:flex-nowrap"
      >
        <SocialPill href="mailto:navarrotiago194@gmail.com">
          <EmailICon class="size-4 md:size-6 text-white" /> navarrotiago194@gmail.com
        </SocialPill>
        <SocialPill href="https://www.linkedin.com/in/tiago-navarro-30bba2291/">
          <LinkedInIcon class="size-4 md:size-6 text-white" /> LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/NTiago-s">
          <GithubIcon class="size-4 md:size-6 text-white" /> Github
        </SocialPill>
        <SocialPill href="/Navarro Tiago CV.pdf" download>
          <DescargarCV class="size-4 md:size-6 text-white" /> Descargar CV
        </SocialPill>
      </nav>
    </SectionContainer>

    <div class="space-y-24">
      <SectionContainer id="exexperiencia">
        <h2 class="text-2xl font-semibold mb-3 flex items-center gap-x-3">
          <PortfolioIcon class="size-8 text-white" />Experiencia + Certificados
        </h2>
        <Certificados />
      </SectionContainer>
      <SectionContainer id="proyectos">
        <h2 class="text-2xl font-semibold mb-3 flex items-center gap-x-3">
          <CodeIcon class="size-8 text-white" />Proyectos
        </h2>
        <Projects />
      </SectionContainer>
      <SectionContainer id="sobre-mi">
        <About />
      </SectionContainer>
    </div>
  </main>
</Layout>
